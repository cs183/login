<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:weightSum="7">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/parameterNameText" android:layout_centerVertical="true"/>
        <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/parameterValueSeekBar"
                android:layout_toRightOf="@+id/parameterNameText"
                android:layout_toLeftOf="@+id/parameterValue" android:layout_centerVertical="true"
                android:paddingLeft="5dp" android:paddingRight="5dp"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/parameterValue"
                android:textSize="14sp"
                android:ems="5"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@+id/parameterNameText"/>
    </RelativeLayout>
</LinearLayout>